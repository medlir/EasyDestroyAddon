<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
    <Script file="EasyDestroy.lua" />

    <Frame name="EasyDestroy" parent="UIParent" hidden="false">
		<Scripts>
			<OnLoad>
				-- Disables the DeleteCursorItem() call for testing when true
				EasyDestroy_Debug = false;
				EasyDestroy_OnLoad();
			</OnLoad>
			<OnEvent>
				EasyDestroy_OnEvent(event);
			</OnEvent>
			<OnKeyDown>
				-- Delete the item in hand
				if arg1 == 'DELETE' then
					EasyDestroy_DeleteCursorItem();
				end
				
				-- Change the rarity threashold
				if EasyDestroy_Debug and (arg1 == 'UP' or arg1 == 'DOWN') then
					EasyDestroy_ChangeQualityFloor(arg1);
				end
				
				if IsControlKeyDown() then
					-- Save the item to the safe list
					local _, _, itemLink = GetCursorInfo();
					if arg1 == 'S' then
						EasyDestroy_AddRemove(itemLink, 'add');
						ClearCursor();
					elseif arg1 == 'R' then
						EasyDestroy_AddRemove(itemLink, 'remove');
						ClearCursor();
					end
				end
								
				-- Tell me what key I pressed
				if EasyDestroy_Debug then
					ChatFrame1:AddMessage('[EasyDestroy] Key Pressed: '..arg1);
				end
			</OnKeyDown>
			<OnUpdate>
				if CursorHasItem() and EasyDestroy_Options.KeyBoardShortcuts then
					this:EnableKeyboard(true);
				else
					if EasyDestroy_Debug then
						-- Enable the keyboard in debug mode regardless
						this:EnableKeyboard(true);
					else
						this:EnableKeyboard(false);
					end
				end
			</OnUpdate>
		</Scripts>
    </Frame>
    
    <CheckButton name="EasyDestroyCheckTemplate1" inherits="UICheckButtonTemplate" virtual="true">
		<HitRectInsets>
			<AbsInset left="0" right="-100" top="0" bottom="0"/>
		</HitRectInsets>
		<Scripts>
			<OnClick>
				if ( this:GetChecked() ) then
					PlaySound("igMainMenuOptionCheckBoxOff");
				else
					PlaySound("igMainMenuOptionCheckBoxOn");
				end
			</OnClick>
			<OnEnter>
				if ( this.tooltipText ) then
					GameTooltip:SetOwner(this, "ANCHOR_LEFT");
					GameTooltip:SetBackdropColor(0.0, 0.0, 0.0);
					GameTooltip:SetText(this.tooltipText, 1.0, 1.0, 1.0);
				end
			</OnEnter>
			<OnLeave>
				GameTooltip:Hide();
			</OnLeave>
		</Scripts>
	</CheckButton>
	<CheckButton name="EasyDestroyCheckTemplate2" inherits="UICheckButtonTemplate" virtual="true">
		<HitRectInsets>
			<AbsInset left="0" right="-100" top="0" bottom="0"/>
		</HitRectInsets>
		<Scripts>
			<OnClick>
				if ( this:GetChecked() ) then
					PlaySound("igMainMenuOptionCheckBoxOff");
				else
					PlaySound("igMainMenuOptionCheckBoxOn");
				end
				EasyDestroy_OptionsCheckButtonOnClick2();
			</OnClick>
			<OnEnter>
				if ( this.tooltipText ) then
					GameTooltip:SetOwner(this, "ANCHOR_LEFT");
					GameTooltip:SetBackdropColor(0.0, 0.0, 0.0);
					GameTooltip:SetText(this.tooltipText, 1.0, 1.0, 1.0);
				end
			</OnEnter>
			<OnLeave>
				GameTooltip:Hide();
			</OnLeave>
		</Scripts>
	</CheckButton>
    
